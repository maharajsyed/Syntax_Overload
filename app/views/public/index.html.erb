
<% unless user_signed_in? %>
    <div class="row">
        <div class="col pt-3">
        <p class="h4 mb-4">Trending</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            Trending Post 1
        </div>
            <div class="col-sm-3">
                Trending Post 2
            </div>
                <div class="col-sm-3">
                    Trending Post 3
                </div>
                    <div class="col-sm-3">
                        Trending Post 4
                    </div>
        </div>
        <% end %>
        <div class="row">
            <div class="col pt-3">
                <p class="h4 mb-4"><div class="badge badge-primary text-wrap" style="width: 6rem;">Popular</div></p>
            </div>
        </div>
    <div class="row">
        <div class="col-8">
        <%= render partial: "posts/list", locals: { posts: @posts } %>   
        </div>
        <div class="col-4">
           <p class="h5 mb-4">  <div class="badge badge-primary text-wrap" style="width: 6rem;">Pristine Clubs  </div></p>
           <div class="card">
                <ul class="list-group list-group-flush">
                 <% @clubs.each do |club| %>
                    <li class="list-group-item"><%= link_to club.name, club_path(club) %></li>
                    <% end %>
                </ul>
            </div>
            
            <%= link_to  "View All", clubs_path, class: "btn btn-primary mt-3" %>
        </div>
    </div>