<% @posts.each do |post| %>
<div class="card p-3">
    <small><p> <%= link_to post.club.name %> posted by <%= link_to post.user.full_name %> <%= time_ago_in_words post.created_at %> ago.</p></small>
    <h4><%= link_to post.title, club_post_path(post.club_id, post) %></h4>
    <p><%= truncate post.body, length: 200 %></p>
</div>
<% end %> 

